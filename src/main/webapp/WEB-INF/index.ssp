<html>
  <head>
    <title>Gesture Drawing</title>

    <script type="text/javascript" src="js/jquery-1.5.2.min.js"></script>
  </head>
  <body>
    <h1></h1>


    <%@ val postUrl: String%>
    <form action="${postUrl}" method="post">
      Time interval:
      <input type="radio" name="timeInterval" value="1" checked="checked"> 1
      <input type="radio" name="timeInterval" value="2"> 2
      <input type="radio" name="timeInterval" value="5"> 5
      <input type="radio" name="timeInterval" value="10"> 10
      <input type="radio" name="timeInterval" value="15"> 15
      <input type="radio" name="timeInterval" value="20"> 20
      <input type="radio" name="timeInterval" value="30"> 30
      <ul>
      <%@ val categories: List[String]%>
      #for (category <- categories)
        <li>
          <input type="checkbox" name="category" value="${category}"> ${category}
        </li>
      #end
      </ul>

      <input type="submit" value="Go!"/>
    </form>

  </body>
</html>
